
params {
    // matrix_dir = '' // for 10x data
    loom_input = '' // unfiltered loom input
    loom_filtered = 'filtered.loom'
    // loom_SCpreprocessed = 'filtered-scanpy.loom' 
    thr_min_genes = 200
    thr_min_cells = 3
    thr_n_genes = 5000
    thr_pct_mito = 0.25
    outdir = "output"
    threads = 6
}

profiles {

    standard {
        process.executor = 'local'
    }
    docker {
        docker.enabled = 'true'
        process.container = 'aertslab/scfiltering-nf:latest'
    }
    singularity {
        singularity.enabled = 'true'
        process.container = 'shub://aertslab/scfiltering-nf:latest'
        singularity.autoMounts = true
    }

}
